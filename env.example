# =============================================================================
# CODEXFLOW.DEV - Environment Configuration
# Rename this file to .env and fill in your values
# =============================================================================

# Application
APP_NAME=CodexFlow
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# =============================================================================
# DATABASE
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=codexflow
DB_USERNAME=codexflow
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
REDIS_PORT=6379

# Cache, Queue, Session
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# =============================================================================
# LITELLM PROXY
# =============================================================================
LITELLM_BASE_URL=http://localhost:4000
LITELLM_MASTER_KEY=sk-codexflow-master-key-change-me

# LiteLLM Database (for internal tracking, health checks, etc.)
# SQLite (simple, recommended for development):
# LITELLM_DATABASE_URL=sqlite:///./litellm.db
# PostgreSQL (recommended for production):
# LITELLM_DATABASE_URL=postgresql://user:password@host:port/litellm

# =============================================================================
# ANTHROPIC API KEYS (3 Organization Pool)
# Get keys from: https://console.anthropic.com/
# Use different organization accounts for load balancing
# =============================================================================
ANTHROPIC_KEY_ORG_A=sk-ant-api03-xxxx
ANTHROPIC_KEY_ORG_B=sk-ant-api03-yyyy
ANTHROPIC_KEY_ORG_C=sk-ant-api03-zzzz

# =============================================================================
# OPENROUTER API KEY
# Get key from: https://openrouter.ai/keys
# Used for: Llama 405B FREE (Grace), GPT-4o-mini (Planner + Grace Fallback)
# =============================================================================
OPENROUTER_API_KEY=sk-or-v1-xxxx

# =============================================================================
# MAIL (for trial reminders)
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="hello@codexflow.dev"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# PAYMENT (Iyzico)
# =============================================================================
IYZICO_API_KEY=
IYZICO_SECRET_KEY=
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# =============================================================================
# OPTIONAL: Monitoring & Logging
# =============================================================================
# Sentry
SENTRY_LARAVEL_DSN=

# Langfuse (LLM observability)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# CODEXFLOW SPECIFIC
# =============================================================================
# Enable prompt logging (WARNING: stores sensitive data)
LOG_PROMPTS=false

# Default plan for new users
DEFAULT_PLAN=trial_free

# Trial duration in hours
TRIAL_DURATION_HOURS=24

